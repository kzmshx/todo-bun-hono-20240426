{
  "$schema": "https://biomejs.dev/schemas/1.7.1/schema.json",
  "files": {
    "include": ["**/*.{js,json,jsx,md,ts,tsx,yaml,yml}"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
